<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Pokedex </title>
    <link rel="stylesheet" href="/detalhes.css" type="text/css">
</head>
<body>
    <nav> 
        <ul> 
            <a href="/" style="color: red;"> Pagina principal - Selecione seu Pok√©mon</a>
        </ul>
    </nav>
    <main>
        <% pokemonAtual.forEach(element => { %>
                <div class="card-container"> 
                    <div class="header-card">
                        <span class="card-id"> <%= element.id %>  </span>
                        <span class="card-number"> <%= element.num %>  </span>
                    </div>
                    <div class="main-card"> 
                        <img src="<%= element.img %> " alt="<%= element.name %> ">
                        <div class="card-name"> <%= element.name %>  </div>
                        <div class="data-card"> 
                            <span class="width"> <%= element.weight %>  </span>  
                            <span class="height"> <%= element.height %>  </span>
                        </div>
                    </div>
                    <div> 
                        <%= element.candy %> 
                    </div>
                    <div>
                        <%= element.weaknesses %> 
                    </div>
                    <div class="footer-card"> <%= element.type %>  </div>
                </div>
        <% }) %>
        <nav> 

    </main>
</body>
</html>